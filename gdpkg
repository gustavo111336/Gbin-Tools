#!/data/data/com.termux/files/usr/bin/bash
# gdpkg - O cora√ß√£o do Dandelion
# Manipula√ß√£o direta via dpkg engine

case $1 in
    -i|--install)
        # Instala um arquivo .deb local diretamente
        dpkg --force-all -i "$2"
        ;;
    -l|--list)
        # Lista arquivos dentro de um pacote instalado
        dpkg-query -L "$2"
        ;;
    -s|--status)
        # Mostra a sa√∫de e vers√£o do pacote no banco de dados real
        dpkg-query -s "$2"
        ;;
    *)
        echo "ü¶Å Dandelion gdpkg"
        echo "Uso: gdpkg [-i arquivo.deb] [-l pacote] [-s pacote]"
        ;;
esac

