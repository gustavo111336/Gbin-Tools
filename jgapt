#!/data/data/com.termux/files/usr/bin/bash
# GAPT - Dandelion Database Reader

DB="/data/data/com.termux/files/usr/var/lib/dpkg/status"

if [ -z "$1" ]; then
    echo "ü¶Å Dandelion GAPT: Informe o nome do pacote."
    exit 1
fi

# L√≥gica pura: procura o bloco do pacote no arquivo de status
# sem usar nenhum comando externo al√©m do grep
/data/data/com.termux/files/usr/bin/grep -A 12 "^Package: $1" "$DB"

